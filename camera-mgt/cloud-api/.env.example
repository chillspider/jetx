# CarWash Cloud API Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3003
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=carwash_dev
DB_USER=carwash
DB_PASSWORD=carwash_dev_pass
DB_SSL=false

# Test Database (for running tests)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=carwash_test
TEST_DB_USER=carwash
TEST_DB_PASSWORD=carwash_test_pass

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10
API_KEY_LENGTH=32

# PlateRecognizer API Configuration
PLATE_RECOGNIZER_API_KEY=your-platerecognizer-api-key
PLATE_RECOGNIZER_API_URL=https://api.platerecognizer.com/v1
PLATE_RECOGNIZER_TIMEOUT=30000
PLATE_RECOGNIZER_REGIONS=us,ca
PLATE_RECOGNIZER_MIN_CONFIDENCE=0.7

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5000
WEBHOOK_BATCH_SIZE=100
WEBHOOK_PROCESS_INTERVAL=5000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_DIRECTORY=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png
UPLOAD_DIRECTORY=./uploads
THUMBNAIL_WIDTH=200
THUMBNAIL_HEIGHT=150

# Device Configuration
DEVICE_HEARTBEAT_INTERVAL=60000
DEVICE_OFFLINE_THRESHOLD=300000
CONFIG_SYNC_INTERVAL=3600000
MAX_DEVICES_PER_SITE=50

# Development/Debug Settings (remove in production)
DEBUG=carwash:*
ENABLE_QUERY_LOGGING=false